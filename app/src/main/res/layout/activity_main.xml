<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.android.gracieacademy.MainActivity">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/location_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gracieacademy" />

    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/location_image"
        android:layout_centerHorizontal="true"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:text="Jiu JItsu For Everyone"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_text_view">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/website_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_web_black_24dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_web_black_24dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:text="GracieAcademy.com for Information" />

            <TextView
                android:id="@+id/website2_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/website_text_view"
                android:drawableLeft="@drawable/ic_web_black_24dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_web_black_24dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:text="GracieUniversity.com for Online Courses" />

            <TextView
                android:id="@+id/location_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/website2_text_view"
                android:drawableLeft="@drawable/ic_place_black_24dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_place_black_24dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:text="2440 W Carson St, Torrance, CA 90501" />

            <TextView
                android:id="@+id/email_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_text_view"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:text="info@gracieuniversity.com" />

            <TextView
                android:id="@+id/phone_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_text_view"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:text="(310) 353-4100" />

            <TextView
                android:id="@+id/description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone_text_view"
                android:padding="16dp"
                android:text="Since 1925, over 40 members of the Gracie Family have dedicated their lives to developing the most effective system of self-defense the world has ever known. Today, the Gracie Jiu-Jitsu Academy is a global organization which stands alone in its ability to empower anyone -- regardless of age, gender, or athletic ability -- using the time-tested techniques and teaching methods perfected over the last century." />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>